# ========================================
# CONFIGURAÇÕES DO APLICATIVO
# ========================================
APP_NAME=Pro Team Care
VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# ========================================
# BANCO DE DADOS SQL SERVER - PRINCIPAL
# ========================================
# ⚠️ DATABASE FIRST: As tabelas foram criadas manualmente no SQL Server
# Schema: [core]
# Tabelas: companies, people, establishments, roles, users, user_roles,
#          phones, emails, addresses

DB_DRIVER=ODBC Driver 18 for SQL Server
DB_SERVER=192.168.11.84
DB_PORT=1433
DB_NAME=pro_team_care
DB_USER=sa
DB_PASSWORD=SuaSenhaAqui

# Schema usado (todas as tabelas estão em [core])
DB_SCHEMA=core

# ========================================
# BANCO DE DADOS SQL SERVER - LOGS
# ========================================
# Banco separado para logs de auditoria (login_logs)
# Isolamento de crescimento de dados para não estourar limite de 10GB do Express

DB_LOGS_NAME=pro_team_care_logs
DB_LOGS_SCHEMA=core

# ========================================
# SEGURANÇA / JWT
# ========================================
# IMPORTANTE: Gerar chave segura em produção
# Comando: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=sua-chave-secreta-muito-longa-aqui-trocar-em-producao-12345678
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ========================================
# CORS - ORIGENS PERMITIDAS
# ========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ========================================
# IA - GEMINI API (OBRIGATÓRIO)
# ========================================
# ⚠️ OBRIGATÓRIO: Configure sua chave da API do Google Gemini
# Como obter: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=sua-chave-gemini-api-aqui
GEMINI_MODEL=gemini-1.5-flash
