# ============================================
# CONFIGURAÇÕES DO COLETOR TJSP
# ============================================

# --- DELAYS E TIMEOUTS ---
# Delay mínimo entre requisições (segundos)
MIN_DELAY=5

# Delay máximo entre requisições (segundos)
MAX_DELAY=15

# Timeout para carregamento de página (segundos)
PAGE_TIMEOUT=30

# Timeout para elementos específicos (segundos)
ELEMENT_TIMEOUT=10

# --- RETRY E RESILIÊNCIA ---
# Número máximo de tentativas em caso de erro
MAX_RETRIES=3

# Delay entre tentativas (segundos)
RETRY_DELAY=10

# Backoff multiplicador (1.5 = aumenta 50% a cada retry)
BACKOFF_MULTIPLIER=1.5

# --- CONTROLE DE TAXA ---
# Máximo de processos simultâneos
MAX_CONCURRENT=1

# Máximo de requisições por minuto
MAX_REQUESTS_PER_MINUTE=6

# --- USER AGENT ---
# User-agent para requisições (rotacionar se necessário)
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/119.0.0.0 Safari/537.36

# --- HORÁRIOS PREFERENCIAIS ---
# Horário de execução preferencial (formato: HH-HH)
# 22-06 = das 22h às 6h (menor tráfego)
PREFERRED_HOURS=22-06

# --- MODO DEBUG ---
# Salvar HTML bruto para debug (true/false)
DEBUG_MODE=false

# Salvar screenshots em caso de erro (true/false)
SAVE_SCREENSHOTS=true

# --- LIMITES DE COLETA ---
# Máximo de movimentações por processo (0 = sem limite)
MAX_MOVIMENTACOES=100

# Máximo de páginas na busca por advogado/parte
MAX_SEARCH_PAGES=10

# --- PATHS ---
# Diretório de saída (relativo ou absoluto)
OUTPUT_DIR=./output

# Diretório de logs
LOG_DIR=./logs

# Diretório de cache HTML (para debug)
CACHE_DIR=./cache

# --- NOTIFICAÇÕES (OPCIONAL) ---
# Enviar notificação ao terminar coleta
ENABLE_NOTIFICATIONS=false

# Email para notificações (se habilitado)
NOTIFICATION_EMAIL=

# --- MONITORAMENTO ---
# Intervalo padrão para monitoramento (minutos)
DEFAULT_MONITOR_INTERVAL=360

# Notificar apenas se houver mudanças
NOTIFY_ONLY_ON_CHANGES=true

# --- BROWSER ---
# Modo headless (true = sem interface gráfica)
HEADLESS=true

# Largura da janela do browser
BROWSER_WIDTH=1920

# Altura da janela do browser
BROWSER_HEIGHT=1080

# --- CLASSIFICAÇÃO ---
# Confiança mínima para classificação de decisão (0.0 a 1.0)
DECISION_CONFIDENCE_THRESHOLD=0.7

# --- LOGS ---
# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Rotacionar logs (true/false)
ROTATE_LOGS=true

# Tamanho máximo do arquivo de log (MB)
MAX_LOG_SIZE=10

# Número de arquivos de log para manter
LOG_RETENTION=7
